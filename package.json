{
  "name": "wordblitz-backend",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "dev": "dotenv -e .env.development  nodemon src/app.ts",
    "build": "tsc &&  dotenv -e .env.production  npx prisma generate --no-engine",
    "start": "dotenv -e .env.production node dist/app.js",
    "prisma:generate:dev": "dotenv -e .env.development npx prisma generate",
    "prisma:generate:prod": "dotenv -e .env.production npx prisma generate",
    "dev-studio": "dotenv -e .env.development npx prisma studio",
    "prod-studio": "dotenv -e .env.production npx prisma studio",
    "prisma:migrate:dev": "dotenv -e .env.development npx prisma migrate dev",
    "prisma:migrate:prod": "dotenv -e .env.production npx prisma migrate dev",
    "prisma:push:dev": "dotenv -e .env.development npx prisma db push",
    "prisma:push:prod": "dotenv -e .env.production npx prisma db push"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.13",
    "@types/sqlite3": "^5.1.0",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prisma": "^6.12.0",
    "sqlite3": "^5.1.7"
  }
}
